<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeuroCare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_color</item>
        <item name="colorSecondaryVariant">@color/background_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="fontFamily">@font/poppins</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_platform_appearance">
        <item name="neuLightShadowColor">#64A2FF</item>
        <item name="neuDarkShadowColor">#2272EA</item>
        <item name="neuFillStartColor">#3C8AFF</item>
        <item name="neuFillEndColor">#3C8AFF</item>
        <item name="neuFillPressedStartColor">#3C8AFF</item>
        <item name="neuFillPressedEndColor">#3C8AFF</item>
        <item name="neuBorderStartColor">#3C8AFF</item>
        <item name="neuBorderEndColor">#3C8AFF</item>
        <item name="neuBorderPressedStartColor">#3C8AFF</item>
        <item name="neuBorderPressedEndColor">#3C8AFF</item>
    </style>

    <style name="button_flat_appearance">
        <item name="neuButtonStartColor">#3C8AFF</item>
        <item name="neuButtonEndColor">#3C8AFF</item>
        <item name="neuButtonBorder1StartColor">#3C8AFF</item>
        <item name="neuButtonBorder1EndColor">#3C8AFF</item>
        <item name="neuButtonBorder2StartColor">#3C8AFF</item>
        <item name="neuButtonBorder2EndColor">#3C8AFF</item>
        <item name="neuButtonPressedDarkShadowColor">#3C8AFF</item>
