<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>
            <!-- set the shadow color here -->
            <solid android:color="#BCBCBC"/>
            <gradient android:type="linear" android:startColor="#000" android:centerColor="#bcbcbc" android:endColor="#EEEEEE" android:angle="270"/>

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="30dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="@color/blue_bg" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" />
        </shape>
    </item>
</layer-list>